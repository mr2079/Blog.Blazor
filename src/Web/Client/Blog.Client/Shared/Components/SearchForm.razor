<div class="search">
	<div class="container-fluid">
		<div class="search-width  text-center">
			<button type="button" class="close" @onclick="CloseSearch">
				<i class="icon_close"></i>
			</button>
			<form asp-controller="Home" asp-action="Search" class="search-form" method="get">
				<input type="text" name="filter" placeholder="دنبال چی میگردی؟">
				<button type="submit" class="search-btn">جستجو</button>
			</form>
		</div>
	</div>
</div>

@code {

	[Inject]
	public IJSRuntime Js { get; set; } = null!;

	private void CloseSearch()
	{
		Js.InvokeVoidAsync("closeSearch");
	}
}
